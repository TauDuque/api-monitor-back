# API Monitor - Production Environment Variables
# Copy this to .env and fill with your actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://postgres:your_secure_database_password_here@postgres:5432/api_monitor?schema=public

# Redis Configuration
REDIS_URL=redis://redis:6379

# Frontend URL (your domain or IP)
FRONTEND_URL=http://your-server-ip-here

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="API Monitor <your-email@gmail.com>"

# Application Settings
NODE_ENV=production
PORT=3000

# Cost Optimization Settings
MAX_CONCURRENT_CHECKS=3
DEFAULT_CHECK_INTERVAL=600
MAX_RETRY_ATTEMPTS=2

# Optional: JWT Secret (if you add authentication later)
# JWT_SECRET=your-super-secret-jwt-key-here

# Optional: Webhook URLs for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
